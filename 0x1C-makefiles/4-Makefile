CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -rf
CFLAGS = -Wall -Werror -Wextra -pedantic -std=gnu89

all:$(OBJ)
    $(CC) $(CFLAGS) $(SRC) -o $(NAME)

.PHONY: clean oclean fclean re

clean:
    $(RM) *~ $(NAME)
    
oclean:
    $(RM) $(OBJ)

fclean:
    clean oclean
re:
    fclean all